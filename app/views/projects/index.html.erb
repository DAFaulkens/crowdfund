<header>
  <h1><%= pluralize(@projects.size, 'Project') %></h1>
</header>

<%= link_to "Add New Project", new_project_path %>

<article>
  <% @projects.each do |project| %>
    <header>
      <h1><%= link_to project.name, project %></h1>
      <%= image_for(project) %>
    </header>

    <h3><%= project.website %></h3>

    <table>
      <tr>
        <th>Description:</th>
        <td><%= truncate(project.description, length: 40, separator: ' ') %></td>
      </tr>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
      </tr>
      <tr>
        <th>Pledging Duration:</th>
        <td>
          <%= pledging_duration(project) %> 
          <strong>(<%= project.pledging_ends_on %>)</strong>
        </td>
      </tr>
      <tr>
        <th>Team Members:</th>
        <td><%= project.team_members %></td>
      </tr>
    </table>
  <% end %>
</article>
