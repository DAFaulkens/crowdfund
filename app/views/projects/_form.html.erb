<%= form_for @project do |f| %>
  <%= render 'shared/errors', object: @project %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, size: 40 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 80, rows: 7 %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website, size: 40 %>
  </p>
  <p>
    <%= f.label :target_pledge_amount %><br />
    <%= f.number_field :target_pledge_amount %>
  </p>
  <p>
    <%= f.label :pledging_ends_on %><br />
    <%= f.date_select :pledging_ends_on %>
  </p>
  <p>
    <%= f.label :team_members %><br />
    <%= f.text_field :team_members %>
  </p>
  <p>
    <%= f.label :image_file_name %><br />
    <%= f.text_field :image_file_name %>
  </p>
  <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </p>
  
  <% unless @project.new_record? %>
    <p>
      <%= f.label :slug %><br />
      <%= f.text_field :slug, size: 40 %>
    </p>
  <% end %>

  <p>
    <%= f.submit %> | 
    <%= link_to "Cancel", projects_path %>
  </p>
<% end %>
