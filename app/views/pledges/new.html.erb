<header>
  <h1>New Pledge for <%= link_to @project.name, @project %></h1>
</header>

<%= form_for([@project, @pledge]) do |f| %>
  <div>
    <%= render 'shared/errors', object: @pledge %>
  </div>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, size: 40 %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, size: 40 %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, cols: 80, rows: 7 %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.select :amount, Pledge::AMOUNTS, prompt: "Pick One!"  %>
  </p>
  <p>
    <%= f.submit 'Pledge!' %>
  </p>
<% end %>
