<header>
  <h1>Sign In</h1>
</header>

<%= form_tag :session do %>
  <p>
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, size: 30 %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, size: 30 %>
  </p>

  <p><%= submit_tag 'Sign In' %></p>
<% end %>
<p>New User? <%= link_to 'Sign Up!', signup_path %></p>
